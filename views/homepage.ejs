<section class="mt-4 p-3 text-center">
  <h1><strong>Welcome to the Home Page</strong></h1>

  <div class="mt-3">
    <button class="btn btn-danger mr-2" onclick="signOut()">Sign Out</button>
    <button class="btn btn-primary" onclick="resetPassword()">Change Password</button>
  </div>

  <div class="mt-4">
    <p>
      <a href="/user/forgot-password" class="btn btn-link">Forgot Password?</a>
    </p>
  </div>
</section>

<script>
  // Function to handle sign-out
  function signOut() {
    window.location.href = "/user/signout";
  }

  // Function to handle reset password
  function resetPassword() {
    window.location.href = "/user/change-password";
  }
</script>

